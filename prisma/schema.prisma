// CollabCanvas.ai Prisma schema
// Aligned with the zero-to-one MVP data model for realtime collaboration.

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum MembershipRole {
  OWNER
  EDITOR
  VIEWER
}

enum NodeKind {
  STICKY
  GROUP
  OUTLINE
}

enum TraceActor {
  USER
  AI
}

enum TraceAction {
  CLUSTER
  OUTLINE
}

model User {
  id          String       @id @default(cuid())
  email       String       @unique
  name        String?
  createdAt   DateTime     @default(now())

  boards      Board[]      @relation("BoardOwner")
  memberships Membership[]
  traces      Trace[]      @relation("TraceActor")
}

model Board {
  id          String       @id @default(cuid())
  title       String
  ownerId     String
  createdAt   DateTime     @default(now())

  owner       User         @relation("BoardOwner", fields: [ownerId], references: [id])
  memberships Membership[]
  nodes       Node[]
  traces      Trace[]
}

model Membership {
  id        String         @id @default(cuid())
  boardId   String
  userId    String
  role      MembershipRole

  board     Board          @relation(fields: [boardId], references: [id])
  user      User           @relation(fields: [userId], references: [id])

  @@unique([boardId, userId])
}

model Node {
  id        String   @id @default(cuid())
  boardId   String
  kind      NodeKind
  x         Float    @default(0)
  y         Float    @default(0)
  content   Json
  clusterId String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  board     Board    @relation(fields: [boardId], references: [id])

  @@index([boardId])
}

model Trace {
  id         String       @id @default(cuid())
  boardId    String
  actor      TraceActor
  action     TraceAction
  prompt     Json?
  response   Json?
  latencyMs  Int?
  model      String?
  tokensIn   Int?
  tokensOut  Int?
  createdAt  DateTime     @default(now())
  userId     String?

  board      Board        @relation(fields: [boardId], references: [id])
  actorUser  User?        @relation("TraceActor", fields: [userId], references: [id])

  @@index([boardId, createdAt])
}
